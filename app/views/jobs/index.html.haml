#front-landing
  .jumbotron{:style => "background: url(#{image_path('header-bg.jpg')});background-size:cover;"}
    .container
      .row
        .col-md-8
          .logomark
            Best Outdoor Jobs
        .col-md-4
          =link_to new_job_path do
            .btn.btn-lg.btn-success.pull-right
              POST A JOB
      .row
        .col-md-8
          %h1.title
            Find the best jobs in the outdoor industry.



.container.fill-white{:style=>"width: 100%;"}
  -@jobs.each do |job|
    =link_to job.url, :target => '_blank' do
      .row
        .job.fill-light-gray
          .col-md-1.flush
            =image_tag('http://www.placecage.com/c/300/200')
          .col-md-6.flush
            .content
              .hook
                %strong
                  =job.title
              .description
                =job.company
          .col-md-2.flush
            .content
              .location.pad1t
                =job.location
          .col-md-2.flush
            .content
              .timer.pad1t
                =job.days_left
                days left
          .col-md-1.flush
            .content
              .social.pad1t
                %span.fa.fa-facebook-square
                %i.fa.fa-twitter-square
