              %label.color-gray Company
              %h3.m00
                =@job.company
            .col-md-6.flush
              %label.color-gray Location
              %h3.m00
                =@job.location
          %p.longform.m3t
            =@job.description
          .apply
            %h4 How to Apply:
            %p
              =@job.url
        .col-md-2.col-md-offset-1
          .thing{"data-offset-top" => "170", "data-spy" => "affix"}
