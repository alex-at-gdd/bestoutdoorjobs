  .jumbotron.short{:style=>"background-image:url('https://scontent-lax3-1.xx.fbcdn.net/hphotos-xpa1/t31.0-8/11728889_1048768568489379_1840094476535132507_o.jpg');"}
    .container
      .row.nav.color-white
        .col-md-8
          .logomark
            =link_to 'Best Outdoor Jobs', '/'
        .col-md-4

          =link_to new_job_path do
            .btn.btn-lg.btn-success.fr
              POST A JOB
          =link_to 'About', about_path, :class => 'fr m2r'
          =link_to 'Blog', 'http://www.outdoorjobs.tumblr.com', :class => 'fr m2r'



  .container.fill-white{:style=>"width: 100%;"}
    .col-md-12.pad5.mob-pad2
      .row
        .col-md-8
          %h2.upcase.fadeInLeft.animated
            =@job.title
          %p
            =@job.created_at
          .pad8b
